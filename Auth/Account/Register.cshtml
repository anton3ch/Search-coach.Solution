@{
  Layout = "_Layout";
}

@using SearchCoach.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />

@if(!ViewData.ModelState.IsValid) 
{
  @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:") 
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  @Html.LabelFor(user => user.FirstName)
  @Html.TextBoxFor(user=> user.FirstName)

  <h4>@Html.LabelFor(user=> user.LastName) @Html.TextBoxFor(user=> user.LastName)</h4>
  <br>

  <h4>@Html.LabelFor(user => user.Email) @Html.TextBoxFor(user=> user.Email)</h4>
  <br>

  <h4>@Html.LabelFor(user=> user.Password) @Html.TextBoxFor(user=> user.Password)</h4>
  <br>

  <h4>@Html.LabelFor(user=> user.ConfirmPassword) @Html.TextBoxFor(user=> user.ConfirmPassword)</h4>
  <br>

  <input type="submit" value="Register" />
}

<p class="enlarge">@Html.ActionLink("Back to accounts page", "Index")</p>