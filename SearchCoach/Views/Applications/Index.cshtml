@{
  Layout = "_Layout";
}

@using SearchCoach.Models


<h1 style="margin-top: 4%; margin-bottom: 4%;">Aplications</h1>

@if (Model.Count == 0)
{
  <h3>No applications have been added yet!</h3>
} 
else
{
  <ul class="mb-5 list-group">
    <li class="listTitle">Role | Company</li>
    @foreach (Application application in Model)
    {
      <li class="list-group-item list-group-item-action"> @Html.ActionLink($"{application.Role}", "Details", new { id = application.ApplicationId }) | @Html.ActionLink($"{application.Company.Name}", "Details", "Companies", new { id = application.Company.CompanyId })</li>
    }
  </ul>
}

<p class="enlarge">@Html.ActionLink("Add new application", "Create")</p>