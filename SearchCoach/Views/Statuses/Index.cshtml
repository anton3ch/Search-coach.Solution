@{
  Layout = "_Layout";
}

@using SearchCoach.Models;

<h1 class="m-2">Statuses</h1>


@if (@Model.Count == 0)
{
  <h3>No statuses have been added yet!</h3>
} 

<ul class="mb-5 list-group">
  <li class="listTitle">Status name</li>
  @foreach(Status status in Model)
  {
    <li class="list-group-item list-group-item-action">@Html.ActionLink($"{status.Stage}", "Details", new { id = status.StatusId }) <span class='gray'> | @status.Application.Role</span></li>
  }
</ul>

<div class="button">
  <p>@Html.ActionLink("Add new status", "Create")</p>
</div>